<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile__blood__suger_9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".com.Activitys.Profile.First.Profile_Blood_Suger_9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_above="@+id/btm1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_above="@id/btm"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="When did you last
do your HBA1C ?"
                android:textColor="@color/darkgray"
                android:textSize="35dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp40"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:src="@drawable/hba1c" />


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Spinner
                        android:layout_width="320dp"
                        android:background="@drawable/spinner_background"
                        android:id="@+id/list"
                        android:layout_height="80dp"></Spinner>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp60"
                android:gravity="center"
                android:layout_weight="1"
                android:text="How frequently do you
measure your blood sugar ?"
                android:textColor="@color/darkgray"
                android:textSize="35dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp40"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:src="@drawable/suger_check" />


                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp20"
                        android:text="No. of Times"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RadioGroup

                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/out_line"
                            android:checkedButton="@+id/offer"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/one"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:checked="true"
                                android:textSize="@dimen/dp20"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#313131" />

                            <RadioButton
                                android:id="@+id/two"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:textSize="@dimen/dp20"
                                android:text="2"
                                android:textColor="#313131" />


                            <RadioButton
                                android:id="@+id/three"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:textSize="@dimen/dp20"
                                android:text="3"
                                android:textColor="#313131" />


                            <RadioButton
                                android:id="@+id/four"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:textSize="@dimen/dp20"
                                android:text="4"
                                android:textColor="#313131" />

                            <RadioButton
                                android:id="@+id/five"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:textSize="@dimen/dp20"
                                android:text="5"
                                android:textColor="#313131" />


                        </RadioGroup>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:textSize="@dimen/dp20"
                        android:text="in a"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/toggle"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/out_line_gray"
                            android:checkedButton="@+id/offer"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/day"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                android:checked="true"
                                android:textSize="@dimen/dp20"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:text="DAY"
                                android:textColor="#313131" />

                            <RadioButton
                                android:id="@+id/week"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                android:textSize="@dimen/dp20"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:text="WEEK"
                                android:textColor="#313131" />


                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:id="@+id/month"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                android:background="@drawable/toggle_widget_background"
                                android:button="@null"
                                android:gravity="center"
                                android:text="MONTH"
                                android:textSize="@dimen/dp20"
                                android:textColor="#313131" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_marginTop="@dimen/dp30"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText

                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp45"
                    android:background="@drawable/shapeedit"
                    android:gravity="center"
                    android:id="@+id/Last_fasting"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/dp40"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp25"
                    android:gravity="center"
                    android:text="Last Fasting" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/ppvalue"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp45"
                    android:background="@drawable/shapeedit"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp40"
                    android:layout_gravity="center"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp25"
                    android:gravity="center"
                    android:text="PP Value" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/btm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="@dimen/NEXTPEV_Large"
                android:layout_height="@dimen/NEXTPEV_Large"
                android:layout_marginLeft="@dimen/dp20"
                android:src="@drawable/ic_chevron_left_black_24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:id="@+id/next"
                android:layout_width="@dimen/NEXTPEV_Large"
                android:layout_height="@dimen/NEXTPEV_Large"
                android:layout_marginRight="@dimen/dp20"
                android:src="@drawable/ic_chevron_right_black_24dp" />
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>

</RelativeLayout>
