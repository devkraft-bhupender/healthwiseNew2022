<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_non__veg_page3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.hwi.health.Activitys.AllTests.CUSTOMISED_DIET_PLAN.Non_Veg_page4">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardElevation="@dimen/dp5"
        android:layout_above="@+id/bottom"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btm1">

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:src="@drawable/non_veg"
                        android:tint="#C8C8C8"/>

                    <LinearLayout
                        android:id="@+id/lin_non_veg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp40"
                            android:text="In how many meals per week, do you eat non veg excluding eggs? (text box)"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/non_veg"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/shapeedit5"></Spinner>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="OF THE NON-VEG MEALS , HOW MANY ARE OF THE GIVEN MEATS ? (MEATS ARE ASSUMED TO BE FREE OF CHARBI/VISIBLE FAT)"
                            android:textColor="@color/textcolorPrimary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp30"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="chicken without skin"
                                android:id="@+id/textView4" />

                            <Spinner
                                android:id="@+id/chicken_without_skin"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="fish" />

                            <Spinner
                                android:id="@+id/fish"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="beef" />

                            <Spinner
                                android:id="@+id/beef"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="goat meat (mutton)" />

                            <Spinner
                                android:id="@+id/goat_meat"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="lamb" />

                            <Spinner
                                android:id="@+id/lamb"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="pork" />

                            <Spinner
                                android:id="@+id/pork"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:background="@drawable/shapeedit5"></Spinner>


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/btm1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp30"

                android:orientation="horizontal"
                android:padding="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/prev"
                        android:layout_width="@dimen/MediumText"
                        android:layout_height="@dimen/MediumText"
                        android:layout_marginLeft="@dimen/dp20"
                        android:src="@drawable/ic_chevron_left_black_24dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="@dimen/MediumText"
                        android:layout_height="@dimen/MediumText"
                        android:layout_marginRight="@dimen/dp20"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
