            android:id="@+id/seekBar"
            android:max="100"
            android:progress="0"
            android:thumb="@drawable/drop"
            android:layout_weight="1" />
-->

        <!--<EditText-->
            <!--android:id="@+id/enter_age"-->
            <!--android:layout_width="250dp"-->
            <!--android:background="@drawable/shapeedit"-->
            <!--android:singleLine="true"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginTop="@dimen/dp40"-->
            <!--android:layout_height="@dimen/dp60" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/dp50"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/enter_dob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="@drawable/shapeedit"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Enter DOB"
                android:singleLine="true" />

            <EditText
                android:id="@+id/enter_age"
                android:layout_width="250dp"
                android:layout_height="@dimen/dp60"
                android:background="@drawable/shapeedit"
                android:gravity="center"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:textSize="20dp"
                android:text="years" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/btm1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/NEXTPEV_Large"
                android:layout_height="@dimen/NEXTPEV_Large"
                android:id="@+id/prev"
                android:layout_marginLeft="@dimen/dp20"
                android:src="@drawable/ic_chevron_left_black_24dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/NEXTPEV_Large"
                android:layout_height="@dimen/NEXTPEV_Large"
                android:id="@+id/next"
                android:layout_marginRight="@dimen/dp20"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
