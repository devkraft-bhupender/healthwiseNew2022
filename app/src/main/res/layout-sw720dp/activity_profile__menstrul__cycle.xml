<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile__menstrul__cycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".com.Activitys.Profile.First.Profile_Menstrul_Cycle_4">


    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_above="@+id/btm"-->
    <!--android:layout_height="match_parent">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="What was the first day
of your last menstrual cycle"
            android:textSize="40dp" />


        <ImageView
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_weight="1"
            android:src="@drawable/calander" />

        <EditText
            android:id="@+id/mc_date"
            android:layout_width="350dp"
            android:layout_height="@dimen/dp45"
            android:background="@drawable/shapeedit"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:gravity="center" />


        <!---->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/SmallTop"
            android:gravity="center"
            android:text="What was your pre
pregnancy weight ?"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_weight="1"
            android:src="@drawable/pregnency_weight" />

        <SeekBar
            android:id="@+id/weight_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="150"
            android:progress="0"
            android:thumb="@drawable/drop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45"

            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/enter_waight"
                android:layout_width="350dp"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp40"
                android:background="@drawable/shapeedit"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp25"
                android:gravity="center"
                android:text="kg." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">

                <ImageView
                    android:id="@+id/prev"
                    android:layout_width="@dimen/NEXTPEV_Large"
                    android:layout_height="@dimen/NEXTPEV_Large"
                    android:layout_marginLeft="@dimen/dp20"
                    android:src="@drawable/ic_chevron_left_black_24dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="@dimen/NEXTPEV_Large"
                    android:layout_height="@dimen/NEXTPEV_Large"
                    android:layout_marginRight="@dimen/dp20"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--</ScrollView>-->


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
