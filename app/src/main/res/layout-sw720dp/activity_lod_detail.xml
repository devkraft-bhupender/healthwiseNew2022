<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lod_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrayback"
    tools:context=".com.Activitys.Logs.LodDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottom"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">



        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dp20"-->
            <!--android:textSize="20dp"-->
            <!--android:padding="@dimen/dp10"-->
            <!--android:text="ADD FOOD ITEMS YOU HAD FOR BREAKFAST"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/squar_plus"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="TYPE TO SEARCH FOOD ITEMS"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/edittextback"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/circle_check"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="FISH FRY"
                android:layout_marginLeft="@dimen/dp20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="Qty"
                android:layout_marginLeft="@dimen/dp20"
                />

            <Button
                android:layout_width="@dimen/dp100"
                android:background="@drawable/quantity"
                android:text="4"
                android:textSize="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_height="@dimen/dp60" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/circle_check"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="PEANUTS"
                android:layout_marginLeft="@dimen/dp20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="Qty"
                android:layout_marginLeft="@dimen/dp20"
                />

            <Button
                android:layout_width="@dimen/dp100"
                android:background="@drawable/quantity"
                android:text="20 gms"
                android:textSize="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_height="@dimen/dp60" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/circle_check"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="FISH FRY"
                android:layout_marginLeft="@dimen/dp20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="Qty"
                android:layout_marginLeft="@dimen/dp20"
                />

            <Button
                android:layout_width="@dimen/dp100"
                android:background="@drawable/quantity"
                android:text="4"
                android:textSize="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_height="@dimen/dp60" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/circle_check"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="PEANUTS"
                android:layout_marginLeft="@dimen/dp20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:singleLine="true"
                android:hint="Qty"
                android:layout_marginLeft="@dimen/dp20"
                />

            <Button
                android:layout_width="@dimen/dp100"
                android:background="@drawable/quantity"
                android:text="20 gms"
                android:textSize="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_height="@dimen/dp60" />
        </LinearLayout>

        <Button
            android:layout_width="@dimen/dp150"
            android:background="@drawable/button"
            android:text="DONE"

            android:layout_marginLeft="@dimen/dp5"
            android:layout_height="50dp" />


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
