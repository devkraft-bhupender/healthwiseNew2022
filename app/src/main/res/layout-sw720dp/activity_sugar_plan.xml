<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sugar_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hwi.health.Activitys.Plans.SugarPlan_activity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardElevation="@dimen/dp5"
        android:layout_above="@+id/bottom"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp25"
           android:gravity="center"

            android:text="Are you a Diabetic?"/>
        
        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:tint="@color/app_green"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:src="@drawable/ic_sugar_blood_level"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp25"
            android:gravity="center"
            android:layout_marginTop="60dp"

            android:text="Need to upgrade to HWI \nDiabetic Pro"/>

        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/edit_shape"
            android:textColor="@color/app_green"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Upgrade now"/>

        <Button
            android:id="@+id/btn_log"
            android:layout_marginTop="@dimen/dp50"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/dp10"
            android:textSize="@dimen/dp15"
            android:background="@color/app_green"
            android:text="Log your Sugar now"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
