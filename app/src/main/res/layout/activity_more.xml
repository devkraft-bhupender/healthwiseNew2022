<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Activitys.More.MoreActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/dp65"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp20"
        android:id="@+id/search_website"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Website"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="@dimen/dp15"/>

    </LinearLayout>

              <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/edit_profile"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/profile_image"
                android:tint="@color/icon_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/Community"
        android:layout_marginTop="@dimen/dp20"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/commulity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="@dimen/dp15"/>


    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/oil_cal"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/commulity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family oil calculator"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/get_email"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/mail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribe to your news letter"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/video"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/video_consult"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Consult"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/Report_export"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:tint="@color/icon_color"
                android:src="@drawable/note"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Report"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/logout"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:tint="@color/icon_color"
                android:src="@drawable/logout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/know_more"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/know_more"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know more"
                android:layout_marginLeft="@dimen/dp20"
                android:textSize="@dimen/dp15"/>


        </LinearLayout>











    </LinearLayout>

    <include
        android:id="@+id/btm"
        layout="@layout/bottom_layout"
       />
</RelativeLayout>
