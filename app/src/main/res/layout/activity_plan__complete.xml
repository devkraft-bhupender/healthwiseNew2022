        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:orientation="vertical"
            android:background="#77434141"
            android:padding="10dp">
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/app_org"
                android:layout_gravity="right"
                android:src="@drawable/ic_clear_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanks for completing Basic Profile, we have generated"
                android:textColor="@color/app_org"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@color/app_org"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weight_lin"
                android:visibility="gone"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp15"
                android:textColor="@color/white"
                android:text="Weight log plan"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/app_org"></View>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/diet_lin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp15"
                    android:textColor="@color/white"
                    android:text="Diet plan"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/app_org"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/excercise_lin"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp15"
                    android:textColor="@color/white"
                    android:text="Exercise plan"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/app_org"></View>

            </LinearLayout>


            <Button
                android:id="@+id/view_plan"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="view plans"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:background="@color/app_org"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/adv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_org"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:text="Click here for Advance profile Complete.."/>

        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->


</RelativeLayout>
