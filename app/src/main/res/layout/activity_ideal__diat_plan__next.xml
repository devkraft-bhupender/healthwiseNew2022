                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shapeedit"></Spinner>


            <TextView
                android:id="@+id/bf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:text="Are you Breast Feeding?" />

            <Spinner
                android:id="@+id/Breast_Feeding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shapeedit"></Spinner>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_mc_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_mc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What was the first day of your last mensrual period"
                    android:inputType="number"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:textSize="13dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pre_pregnancy_weight_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pre_pregnancy_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What was your pre-pregnancy weight(Kgs)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="13dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/child_age_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:text="how old is your child?" />

            <Spinner
                android:id="@+id/child_age"
