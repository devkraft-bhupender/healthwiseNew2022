            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Waist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Waist Circumference"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Waist in CM(Optional)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Blood_Pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Blood Pressure (Systolic/upper value)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Diastolic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(Diastolic/lower value)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:text="LABORATORY TESTS"
                android:textStyle="bold"
                android:textColor="@color/textcolorPrimary"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/fbcolor"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Hemoglobin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hemoglobin(gm/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Hematocrit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hematocrit(%))"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/blood_sugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fasting blood sugar(mg/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blood lipid profile including :"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp15"
                android:textColor="@color/textcolorPrimary"
                android:textSize="17dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Total_cholesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total cholesterol(mg/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/LDL_cholesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LDL cholesterol(mg/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/HDL_cholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HDL cholesterol(mg/dL)"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Triglycerides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Triglycerides(mg/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Vitamin_levels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vitamin D levels(ng/dL)"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="16dp" />
        </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Vitamin_B12_levels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vitamin B12 levels(pg/dL)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:text="Do you smoke?"/>
            <Spinner
                android:id="@+id/smoke"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shapeedit"
                ></Spinner>



        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/btm"
        layout="@layout/bottom_layout"
        />

</RelativeLayout>
