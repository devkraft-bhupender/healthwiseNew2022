<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customised__diet__plan_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrayback"
    android:orientation="vertical"
    tools:context="com.hwi.health.Activitys.AllTests.CUSTOMISED_DIET_PLAN.Customised_Diet_Plan_result">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lina"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom">


        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_above="@+id/bottomt">


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/spin_line"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/dp20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_green"
                        android:textSize="@dimen/dp15"
                        android:text="Edit"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="#707070"
                        android:src="@drawable/ic_edit_black_24dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Morning_snack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="Morning snack"
                    android:textColor="@color/app_green"
                    android:textSize="@dimen/dp20" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_m"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1">


                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="Breakfast"
                    android:textColor="@color/app_green"
                    android:textSize="@dimen/dp20" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1">


                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/Lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="Lunch"
                android:textColor="@color/app_green"
                android:textSize="@dimen/dp20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1">


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Evening_snack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="Evening snack"
                android:textColor="@color/app_green"
                android:textSize="@dimen/dp20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1">


            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="Dinner"
                android:textColor="@color/app_green"
                android:textSize="@dimen/dp20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1">


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/get_custom_plan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Customize your meal plan"
            android:textSize="12dp"
            android:paddingRight="@dimen/dp5"
            android:paddingLeft="@dimen/dp5"
            android:background="@color/app_green"
            android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>

</RelativeLayout>
