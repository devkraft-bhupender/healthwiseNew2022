<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sugar_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hwi.health.Activitys.Logs.Sugar_log_Activity">


    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/dp5"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your Sugar Log "
                    android:textColor="@color/darkgray"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_sugar_blood_level"
                    android:tint="@color/app_green" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Date"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Date"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Time"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Time"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Have you excercised within last 2 hours"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape">

                    <Spinner
                        android:id="@+id/excercised"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="@dimen/dp5"

                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Test Type"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape">

                    <Spinner
                        android:id="@+id/Fasting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="@dimen/dp5"

                        />
                </LinearLayout>
<!--
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Fasting"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Fasting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Fasting"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pre Breakfast"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Pre_Breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Pre Breakfast"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                               <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Post Breakfast"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Post_Breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Post Breakfast"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pre Lunch"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Pre_Lunch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Pre Lunch"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Post Lunch"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Post_Lunch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Post Lunch"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pre Dinner"
                android:textSize="15dp" />


                <EditText
                    android:id="@+id/Pre_Dinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Pre Dinner"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Post Dinner"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Post_Dinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Post Dinner"

                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/Other"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_shape"
                    android:hint="Other"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/dp15" />-->
                <Button
                    android:id="@+id/submit"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp50"
                    android:background="@color/app_green"
                    android:text="Submit"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
