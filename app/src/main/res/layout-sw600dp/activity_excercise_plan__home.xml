<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_excercise_plan__home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hwi.health.Activitys.Plans.Excercize_plans.ExcercisePlan_Home">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardElevation="@dimen/dp5"
        android:layout_above="@+id/bottom"
        app:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_above="@+id/bottom"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_green"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Your current activity level is"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/activity_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_green"
            android:textStyle="bold"
            android:gravity="center"
            android:text=""
            android:textSize="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_green"
            android:layout_marginTop="30dp"></View>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="30dp"
            android:text="In the next 4-6 weeks , we want to get to\n at least low level of physical activity."/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_green"
            android:layout_marginTop="30dp"></View>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="This means at least 3-4 days of 20-30 minutes\n moderate intensity aerobic exercise \nAND 1-2 days/week of strength training \nwork out ( at least one set)
Before we begin."/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_green"
            android:layout_marginTop="30dp"></View>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Take the PARQ test to see whether \nyou can start right away"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@color/app_green"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"


                android:textSize="18dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@color/app_green"></View>


        </LinearLayout><TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:textSize="@dimen/dp20"
        android:gravity="center"
        android:layout_marginTop="30dp"
            android:text="you need to see a doctor first"/>


       <!-- <TextView
            android:id="@+id/text_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/app_green"
            android:textSize="20dp"
            android:gravity="center"
            android:text="https://www.healthwiseindian.com/test-for-fitness-to-exercise/"/>

-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physical Activity Readiness Questions"
                android:textSize="@dimen/dp20" />

            <TextView
                android:id="@+id/text_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/app_green"
                android:textSize="@dimen/dp20"/>
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ok"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp50"
            android:background="@color/app_green"/>
    </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/btm"
            layout="@layout/bottom_layout2" />

    </RelativeLayout>
</RelativeLayout>
