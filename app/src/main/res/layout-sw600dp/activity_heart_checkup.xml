<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_heart_checkup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76B7DA"
    tools:context=".com.Activitys.More.Calculator_PKG.HeartCheckup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/dp50"
            android:layout_height="100dp"
            android:src="@drawable/heart_checkup"
            android:tint="#ffffff"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp50"
            android:textSize="@dimen/dp25"
            android:text="Health Check Up\nCalculator"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center"
            android:text="Health Check Up gives you a list of possible
diseases and deficiancy according to your profile"
            android:textColor="#ffffff"
            android:textSize="18dp" />


        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp50"
            android:text="NEXT"
            android:background="@drawable/bordor_button"/>

    </LinearLayout>

    <include
        android:id="@+id/btm"
        layout="@layout/bottom_layout" />
</RelativeLayout>
